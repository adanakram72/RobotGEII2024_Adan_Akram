<Window x:Class="WpfRobotInterface.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfRobotInterface"  
        xmlns:oscillo="clr-namespace:WpfOscilloscopeControl;assembly=WpfOscilloscopeControl"
        xmlns:AsservDisplay="clr-namespace:WpfAsservissementDisplay;assembly=WpfAsservissementDisplay"
        mc:Ignorable="d"
        Title="MainWindow" Height="700" Width="1000">

    <TabControl x:Name="MainTabControl">
        <!-- Onglet principal -->
        <TabItem Header="Contrôle Robot">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="1*"/>
                    <ColumnDefinition Width="100"/>
                    <ColumnDefinition Width="1*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="1*" />
                    <RowDefinition Height="0"/>
                    <RowDefinition Height="1.*"/>
                </Grid.RowDefinitions>

                <StackPanel>
                <GroupBox Header="Emission" Grid.Column="0" Grid.Row="0" BorderBrush="#FF123950" Margin="7,7,7,7" Grid.ColumnSpan="2" >
                    <TextBox x:Name="textboxEmission" Background="#DEDFDE" KeyUp="TextBoxEmission_KeyUp" Height="100"></TextBox>
                    </GroupBox>
                    <GroupBox Header="Reception" BorderBrush="SlateGray" Margin="7,7,7,7">
                    <TextBox x:Name="textboxReception" Background="#DEDFDE" AcceptsReturn="True" Height="100"></TextBox>
                    </GroupBox>

                </StackPanel>


                <oscillo:WpfOscilloscope x:Name="oscilloSpeed" Grid.Row="0" Grid.Column="2" Loaded="oscilloSpeed_Loaded" Margin="10"/>
                

                <StackPanel Orientation="Vertical" Grid.Row="0" HorizontalAlignment="Center" VerticalAlignment="Center" Grid.Column="1" Width="80">
                    <Button x:Name="buttonSend" Content="Envoyer" Margin="5" Click="ButtonSend_Click" KeyUp="TextBoxEmission_KeyUp" Height="40" Background="WhiteSmoke"/>
                    <Button x:Name="buttonTest" Content="Test" Margin="5" Click="ButtonTest_Click" Background="WhiteSmoke" Height="40" />
                    <Button x:Name="buttonClear" Content="Effacer" Margin="5" Click="buttonClear_Click" Height="40"  />
                </StackPanel>

                <GroupBox Header="Moteur" Grid.Column="0" Grid.Row="2" BorderBrush="ForestGreen" Margin="80,40,80,40">
                    <StackPanel VerticalAlignment="Center">
                        <StackPanel Orientation="Horizontal">
                            <Label Content="MotGauche :" VerticalAlignment="Center"/>
                            <Label Name="ValMotGauche" Content="0" VerticalAlignment="Center"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal">
                            <Label Content="MotDroit :" VerticalAlignment="Center"/>
                            <Label Name="ValMotDroit" Content="0" VerticalAlignment="Center"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal">
                            <Label Content="XPos :" VerticalAlignment="Center"/>
                            <Label Name="ValXPos" Content="0" VerticalAlignment="Center"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal">
                            <Label Content="YPos :" VerticalAlignment="Center"/>
                            <Label Name="ValYPos" Content="0" VerticalAlignment="Center"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal">
                            <Label Content="Angle :" VerticalAlignment="Center"/>
                            <Label Name="ValAngle" Content="0" VerticalAlignment="Center"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal">
                            <Label Content="VitAng :" VerticalAlignment="Center"/>
                            <Label Name="ValVitAng" Content="0" VerticalAlignment="Center"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal">
                            <Label Content="VitLin :" VerticalAlignment="Center"/>
                            <Label Name="ValVitLin" Content="0" VerticalAlignment="Center"/>
                        </StackPanel>
                    </StackPanel>
                </GroupBox>


                <!-- <GroupBox Header="E-Leds" Grid.Row="2" Grid.Column="1" BorderBrush="SeaGreen" Background="White" Margin="30,40,30,40">
                <StackPanel Orientation="Vertical" VerticalAlignment="Center" HorizontalAlignment="Center">
                    <CheckBox Name="LEDVerte" Content="LVer" HorizontalAlignment="Left" Height="21" Margin="5,3" Width="45" Checked="LEDVerte"/>
                    <CheckBox Name="LEDBleue" Content="LBle" HorizontalAlignment="Left" Height="21" Margin="5,3" Width="45" Checked="LEDBleue"/>
                    <CheckBox Name="LEDBlanche" Content="LBla" HorizontalAlignment="Left" Height="21" Margin="5,3" Width="45" Checked="LEDBlanche"/>
                    <CheckBox Name="LEDOrange" Content="LOra" HorizontalAlignment="Left" Height="21" Margin="5,3" Width="45" Checked="LEDOrange"/>
                    <CheckBox Name="LEDRouge" Content="LRou" HorizontalAlignment="Left" Height="21" Margin="5,3" Width="45" Checked="LEDRouge"/>
                </StackPanel>
           </GroupBox>-->

                <GroupBox Header="Télémètres IR" Grid.Row="2" Grid.Column="3" BorderBrush="SeaGreen" Margin="80,40,80,40" Background="White">
                    <StackPanel VerticalAlignment="Center">
                        <StackPanel Orientation="Horizontal">
                            <Label Content="IRExGauche : " VerticalAlignment="Center"/>
                            <Label Name="ValueIRExGauche" Content="0" VerticalAlignment="Center"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal">
                            <Label Content="IRGauche : " VerticalAlignment="Center"/>
                            <Label Name="ValueIRGauche" Content="0" VerticalAlignment="Center"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal">
                            <Label Content="IRCentre : " VerticalAlignment="Center"/>
                            <Label Name="ValueIRCentre" Content="0" VerticalAlignment="Center"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal">
                            <Label Content="IRDroit : " VerticalAlignment="Center"/>
                            <Label Name="ValueIRDroit" Content="0" VerticalAlignment="Center"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal">
                            <Label Content="IRExDroit : " VerticalAlignment="Center"/>
                            <Label Name="ValueIRExDroit" Content="0" VerticalAlignment="Center"/>
                        </StackPanel>
                    </StackPanel>
                </GroupBox>
                
            </Grid>
        </TabItem>

        <!-- Onglet secondaire -->
        <TabItem Header="Tasserv">
            <Grid Background="White" VerticalAlignment="Center">
                <AsservDisplay:AsservissementRobot2RouesDisplayControl x:Name="asservSpeedDisplay"/>
            </Grid>
        </TabItem>
    </TabControl>
</Window>